                </ControlTemplate>
            </Button.Template>
        </Button>


        <Button x:Name="btnReport" Content="Report" Grid.Row="10" Grid.Column="2" Cursor="Hand" Margin="42,86,27,-127"  FontSize="25"  Foreground="White" Click="BtnReport_Click">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="Border" CornerRadius="16,16,16,16" BorderThickness="1"  BorderBrush="White">
