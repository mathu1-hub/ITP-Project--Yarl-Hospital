                </ControlTemplate>
            </Button.Template>
        </Button>


        <Button x:Name="btnTreatment" Content="Treatment" Grid.Row="10" Grid.Column="0" Cursor="Hand" Margin="36,87,24,-128"  FontSize="25" Foreground="White" Click="btnTreatment_Click">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="Border" CornerRadius="16,16,16,16" BorderThickness="1"  BorderBrush="White">
