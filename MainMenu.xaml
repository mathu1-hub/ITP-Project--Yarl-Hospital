        <Button x:Name="btnDoctor" Content="Doctor" Grid.Row="7" Grid.Column="2" Cursor="Hand" Margin="42.4,35.6,27,30.6"  FontSize="25" Foreground="White" Click="btnDoctor_Click" Grid.RowSpan="4">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="Border" CornerRadius="16,16,16,16" BorderThickness="1"  BorderBrush="White">
