                </ControlTemplate>
            </Button.Template>
        </Button>


        <Button x:Name="btnPayment" Content="Payment" Grid.Row="10" Grid.Column="1" Cursor="Hand" Margin="30,86,30,-127"  FontSize="25" Foreground="White" Click="btnPayment_Click">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="Border" CornerRadius="16,16,16,16" BorderThickness="1"  BorderBrush="White">
                        <ContentPresenter Margin="6" HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True"></ContentPresenter>
