                            <Setter TargetName="Border" Property="BorderBrush" Value="#FF6262EA" />
                        </Trigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Button.Template>
        </Button>

        <Label Content="Log Out" Grid.Column="2" Grid.Row="2" Foreground="White" FontWeight="Bold" Margin="266.4,24.6,0,11.4" Grid.RowSpan="2" HorizontalAlignment="Center" Width="64" MouseDoubleClick="Label_MouseDoubleClick" />

        <Button x:Name="btnLogout"  FontStretch="Expanded" Grid.Column="2" Grid.Row="1" Margin="255,10,-12,10" Grid.RowSpan="2" Cursor="Hand" >

            <Image Source="Images/user.png" RenderTransformOrigin="0.083,0.587" OpacityMask="#FFA84848"></Image>

            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="Border" CornerRadius="0,0,0,0" BorderThickness="0" >
                        <ContentPresenter Margin="6" HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True"></ContentPresenter>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsKeyboardFocused" Value="true"/>
                        <Trigger Property="IsMouseOver" Value="true">

                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">


                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>


        </Button>
        <Button x:Name="btnEmail" Content="Send Email" Grid.Row="11" Grid.Column="1" Cursor="Hand" Margin="29.6,202.4,29.6,-244.2"  FontSize="25"  Foreground="White" Click="BtnEmail_Click">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="Border" CornerRadius="16,16,16,16" BorderThickness="1"  BorderBrush="White">
                        <ContentPresenter Margin="6" HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsKeyboardFocused" Value="true"/>
